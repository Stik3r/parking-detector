<UserControl x:Class="parking_detector.Controls.DataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:parking_detector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="listBox" IsHitTestVisible="False">
            <ListBoxItem>
                <TextBlock Text="Всего мест на парковке:"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock x:Name="parkingCount"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Занято мест:"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock x:Name="parkingCountTaken"/>
            </ListBoxItem>
        </ListBox>
    </Grid>
    
    
</UserControl>
